@{
    ViewBag.Title = "Email Home Page";
}

<div class="jumbotron">
    <h1>My Emails</h1>
    <p class="lead">This page displays all my emails</p>
    <p><a href="/Home/NewMessage" class="btn btn-primary btn-large">+ New Message</a></p>
</div>

<div ng-controller="EmailsController">
    <div ng-repeat="email in emails" class="row">
        <div class="col-md-4">
            <p>{{email.recipient}}</p>
        </div>
        <div class="col-md-4">
            <p>{{email.subject}}</p>
        </div>
        <div class="col-md-4">
            <p>{{email.content}}</p>
        </div>
    </div>
</div>